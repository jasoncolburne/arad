[[- define "postgres_task_config" -]]
image          = "postgres:bullseye"
auth_soft_fail = true
volumes        = [
    "local/postgresql.conf:/etc/postgresql/postgresql.conf",
    "arad_[[ . ]]_database:/var/lib/postgresql/data",
]
volume_driver  = "local"
command = "postgres"
args = [
    "-c",
    "config_file=/etc/postgresql/postgresql.conf"
]
[[- end -]]